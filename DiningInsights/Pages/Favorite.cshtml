@page
@model FavoriteModel
@{
    ViewData["Title"] = "MyFavorite";
}
<h2>My Favorites Food</h2>

<div>
    <table class="table">
        <thead>
            My Favorite Restaurants
        </thead>
        <tbody>
            @foreach (var restaurant in Model.FavoriteList)
            {
                @if (restaurant.isFavorite)
                {
                    <tr>
                        <td>@restaurant.Name</td>
                        <td>@restaurant.FoodType</td>
                        <td>
                            <form method = "post">
                                <button type="submit" asp-page-handler="Remove" asp-route-name="@restaurant.Name">💔️</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>    
</div>

